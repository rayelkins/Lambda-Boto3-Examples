{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EC2Snapshot",
            "Effect": "Allow",
            "Action": [
                "ec2:AuthorizeSecurityGroupIngress",
                "ec2:Describe*",
                "logs:CreateLogStream",
                "ec2:CreateSecurityGroup",
                "ec2:CreateTags",
                "ec2:CreateSnapshots",
                "ec2:CreateSnapshot",
                "ec2:ModifyInstanceAttribute",
                "ec2:StopInstances",
                "logs:CreateLogGroup",
                "logs:PutLogEvents"
            ],
            "Resource": "*"
        }
    ]
}